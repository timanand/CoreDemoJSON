@model List<CoreDemoJSON.Models.StaffMember>

@{
    ViewData["Title"] = "List Staff";
}

<br><br>
    <h5>List of Staff Members from flat JSON File</h5>
<br>


<a asp-action="Add">Add new Staff</a>

<br><br>
<table class ="table table-bordered">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>

    @foreach(var staff in Model)
    {
        <tr>

            <td>@staff.Id</td>
            <td>@staff.FirstName</td>
            <td>@staff.LastName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@staff.Id">Edit</a> /
                <a asp-action="Delete" asp-route-id="@staff.Id">Delete</a> 
            </td>

        </tr>
    }

</table>